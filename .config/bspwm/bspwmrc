bspc rule -a libreoffice desktop=^2 follow=on focus=on
bspc rule -a libreoffice-draw desktop=^2 follow=on focus=on
bspc rule -a libreoffice-calc desktop=^2 follow=on focus=on
bspc rule -a libreoffice-base desktop=^2 follow=on focus=on
bspc rule -a libreoffice-writer desktop=^2 follow=on focus=on
bspc rule -a libreoffice-impress desktop=^2 follow=on focus=on
bspc rule -a libreoffice-startcenter desktop=^2 follow=on focus=on
bspc rule -a pcmanfm desktop=^2 follow=on focus=on layer=below 
bspc rule -a Pcmanfm desktop=^2 follow=on focus=on layer=below 

bspc rule -a Gimp desktop=^2 follow=on focus=on state=fullscreen layer=below 
bspc rule -a gimp desktop=^2 follow=on focus=on state=fullscreen layer=below 

#__        __   _       _                                         
#\ \      / /__| |__   | |__  _ __ _____      _____  ___ _ __ ___ 
 #\ \ /\ / / _ \ '_ \  | '_ \| '__/ _ \ \ /\ / / __|/ _ \ '__/ __|
