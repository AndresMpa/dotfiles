$HOME/.config/polybar/launch.sh & > /dev/null

pgrep -x sxhkd > /dev/null || sxhkd &

# May consume too much energy
picom --config $HOME/.config/picom/picom.conf &
picom &

feh --bg-fill /home/andresmpa/Im√°genes/wallpaper.png &

#  __  __             _ _             
#|  \/  | ___  _ __ (_) |_ ___  _ __ 
#| |\/| |/ _ \| '_ \| | __/ _ \| '__|
#| |  | | (_) | | | | | || (_) | |   
#|_|  |_|\___/|_| |_|_|\__\___/|_|  
#

#  You can use xrandr -q or bspc query -M --names to find the monitor names.
bspc monitor -d I II III IV V

bspc config border_width         3
bspc config window_gap           5 

bspc config split_ratio          0.5
bspc config gapless_monocle      true
bspc config borderless_monocle   true

# Colors
bspc config normal_border_color		"#4c566a"
bspc config active_border_color		"#1a1a1a"
bspc config focused_border_color	"#FFFFFF"
bspc config presel_feedback_color	"#5e81ac"

bspc config urgent_border_color 	"#FF0011"

# Use this command and click over an especific application
# to see what its name
#xprop | grep WM_CLASS
#__        __         _                                  
#\ \      / /__  _ __| | _____ _ __   __ _  ___ ___  ___ 
 #\ \ /\ / / _ \| '__| |/ / __| '_ \ / _` |/ __/ _ \/ __|
  #\ V  V / (_) | |  |   <\__ \ |_) | (_| | (_|  __/\__ \
   #\_/\_/ \___/|_|  |_|\_\___/ .__/ \__,_|\___\___||___/
