# Space for messages and conferences
bspc rule -a discord desktop=^4 follow=on focus=on
bspc rule -a TelegramDesktop desktop=^4 follow=on focus=on
bspc rule -a telegram-desktop desktop=^4 follow=on focus=on

#  ____                           
 #/ ___| __ _ _ __ ___   ___  ___ 
#| |  _ / _` | '_ ` _ \ / _ \/ __|
#| |_| | (_| | | | | | |  __/\__ \
 #\____|\__,_|_| |_| |_|\___||___/

bspc rule -a steam desktop=^5 follow=on focus=on
bspc rule -a Steam desktop=^5 follow=on focus=on
bspc rule -a csgo_linux64 desktop=^5 follow=on focus=on state=fullscreen layer=below

 #____       _       _                
#|  _ \ ___ | |_   _| |__   __ _ _ __ 
#| |_) / _ \| | | | | '_ \ / _` | '__|
#|  __/ (_) | | |_| | |_) | (_| | |   
#|_|   \___/|_|\__, |_.__/ \__,_|_|   
              #|___/                  

bscp rule -a polybar manage=off


# Disable beep
xset -b

# Disable screelock (You may need to remove this)
xset s off

# Set up keymaps
setxkbmap -layout latam
