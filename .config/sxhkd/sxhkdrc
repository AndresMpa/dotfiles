#
# Brightness
#

XF86MonBrightnessDown
	sleep 0.2; \
	backlight -dec 20 \
	exec ./scripts/brightnessDown.sh

XF86MonBrightnessUp	
	sleep 0.2; \
	backlight -inc 20 \
	exec ./scripts/brightnessUp.sh

#
# Pulseaudio
#

XF86AudioMute
	sleep 0.2; \
	amixer set Master toggle

XF86AudioLowerVolume
	sleep 0.2; \
	pactl set-sink-volume alsa_output.pci-0000_03_00.6.analog-stereo -5%

XF86AudioRaiseVolume
	sleep 0.2; \
	pactl set-sink-volume alsa_output.pci-0000_03_00.6.analog-stereo +5%

#
# Screenshots
#   

Print
	sleep 0.2; \
	flameshot

ctrl + Print
	sleep 0.2; \
	import -window root ~/Escritorio/$(date '+%Y%m%d-%H%M%S').png

